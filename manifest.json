{
  "manifest_version": 3,
  "name": "Mentari Mod",
  "version": "1.2.0",
  "description": "Ekstensi untuk ganti background page login.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mentari.unpam.ac.id/*"
      ],
      "exclude_matches": [
        "https://mentari.unpam.ac.id/login"
      ],
      "js": [
        "home.js"
      ]
    },
    {
      "matches": [
        "https://mentari.unpam.ac.id/*"
      ],
      "js": [
        "home.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "background/columbina.png"
      ],
      "matches": [
        "https://mentari.unpam.ac.id/*"
      ],
      "exclude_matches": [
        "https://mentari.unpam.ac.id/login"
      ]
    },
    {
      "resources": [
        "background/columbina.png"
      ],
      "matches": [
        "https://mentari.unpam.ac.id/*"
      ]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}